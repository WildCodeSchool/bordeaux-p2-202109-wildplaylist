{% extends 'layout.html.twig' %}

{% block content %}
    <div class="container mt-4 mb-4 p-3 d-flex justify-content-center">
        <div class=" col-md-4 card p-4">
            <div class=" image d-flex flex-column justify-content-center align-items-center mt-4">
                <button class="btn">
                    <img class="rounded-circle m-auto" src="https://avatars.githubusercontent.com/{{ user.github_name }}" height="100" width="100" />
                </button>
                <span class="name mt-2">{{ user.pseudo }}</span>
                <!-- <span class="idd mt-3">{{ user.mail }}</span> -->
                <div class="d-flex flex-row justify-content-center align-items-center gap-2 mt-1">
                    <i class="fab fa-github"></i>
                    <span class="idd1">{{ user.github_name }}</span>
                </div>
                <div class=" d-flex mt-5">
                    <button class="btn1 btn-dark mt-3">Edit Profile</button>
                </div>
                <p class="mt-3">mes chansons</p>
                <div class="text">
                    <ul class="list-unstyled">
                    {% for song in songs %}
                        <li class="mt-O pt-O">
                            <a href="{{ song.url }}" target="_blank">{{ song.title }}</a>
                        </li>
                    {% endfor %}
                    </ul>
                </div>
                {%  if user.is_admin %}
                    <div>
                        <span><i class="fas fa-crown"></i></span>
                    </div>
                {% endif %}
                <div class=" px-2 rounded mt-4 ">
                    <span class="join">Joined {{ user.created_at }}</span>
                </div>
            </div>
        </div>
    </div>
{% endblock %}