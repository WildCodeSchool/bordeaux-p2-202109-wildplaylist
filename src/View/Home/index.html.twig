{% extends 'layout.html.twig' %}
{% block content %}
    <h1>Musique Sauvage</h1>
    <div class="d-flex justify-content-center">
        <img class="logo" src="/assets/images/logo_wild_playlist.gif" alt="logo wild playlist" width="150" height="auto">
    </div>
    <div class="d-flex justify-content-center">
        <form action='date' method='POST'>
            <input type='date' name='date'>
            <button class='btn btn-primary'>Ok</button>
        </form>
    </div>
    <div class="d-flex row justify-content-center">
        <div class="col-5">
            <div class="p-2 flex-shrink-1">
                <ul>
                    {% set songUrl = '' %}
                    {% for song in songs %}
                        <li class='text-light'>{{ song.rating }} <i class="fas fa-arrow-up"></i> {# Système de votes #}
                            {{ song.title }} {# Titre de la musique #}
                            <button type="button" data-url='{{ song.url }}' class='play-button'><i class="fas fa-play"></i></button> {# Bouton de lecture avec fonction Ajax #}
                            <br>Partagé par {{ song.pseudo }}</li> {# Pseudo de l'utilisateur #}
                    {% endfor %}
                    {% include 'components/_playlist.html.twig' %}
                    <a class="" href="" data-bs-toggle="modal" data-bs-target="#addingModal"><i class="fas fa-plus-circle"></i></a>
                </ul>
            </div>
        </div>
        <div class="col-5">
            <div class="p-2">
                {% include 'components/_video-player.html.twig' %}
            </div>
        </div>
    </div>
{% endblock %}
{% block javascript %}
    <script src="assets/scripts/changeUrlSong.js"></script>
{% endblock %}