{% extends 'layout.html.twig' %}
{% block content %}
    <div class="calendar-block d-flex justify-content-center">
        <form action='date' method='POST'>
            <input type='date' name='date'>
            <button class='calendar btn-sm btn-primary btn-rounded'><i class="fas fa-calendar-day"></i></button>
        </form>
    </div>
    <div class="d-flex flex-column-reverse align-items-stretch flex-lg-row justify-content-around">
        <div class="col-12 col-lg-5 bg-secondary shadow rounded">
            <div class="p-2 flex-shrink-1">
                <ul class="list-group list-group-flush">
                    {% set songUrl = '' %}
                    {% for song in songs %}
                        <li class="list-group-item bg-secondary text-white">{{ song.rating }} <i class="fas fa-arrow-up"></i>
                            <button type="button" data-url='{{ song.url }}' class='play-button btn-sm btn-light'><i class="fas fa-play-circle"></i></button> {# Système de votes #}
                            {{ song.title }} {# Titre de la musique #}
                            <button type="button" data-url='{{ song.url }}' class='play-button'><i class="fas fa-play"></i></button> {# Bouton de lecture avec fonction Ajax #}
                            <br>Partagé par {{ song.pseudo }}</li> {# Pseudo de l'utilisateur #}

                    {% endfor %}
                    {% if count >= 10  %}
                        Vous ne pouvez plus poster de musique aujourd'hui, revenez demain :)
                    {% elseif  has_already_post != false %}
                       Vous avez déjà posté une musique
                    {% else %}
                        {% include 'components/_playlist.html.twig' %}
                        <a class="" href="" data-bs-toggle="modal" data-bs-target="#addingModal"><i class="fas fa-plus-circle"></i></a>
                    {% endif %}
                </ul>
                <div class="d-flex justify-content-end">
                    {% if session %}
                        <a class="button-add-song" href="" data-bs-toggle="modal" data-bs-target="#addingModal"><i class="fas fa-plus-circle"></i></a>
                    {% endif %}
                </div>
            </div>
        </div>
        <div class="col-12 col-lg-5 bg-secondary shadow rounded">
            <div>
                {% include 'components/_video-player.html.twig' %}
            </div>
        </div>
    </div>
{% endblock %}
{% block javascript %}
    <script src="assets/scripts/changeUrlSong.js"></script>
{% endblock %}